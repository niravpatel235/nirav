<div class="form-actions">
<h1>Nirav's Slam-book</h1>
</div>
<div class="btn"><%= link_to "View my book", posts_path %></div> <div class="btn"><%= link_to "Sign my book", new_post_path %> </div>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Dob</th>
    <th>Desire</th>
    <th>Intrest</th>
    <th>Hobby</th>
    <th>Signature</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.address %></td>
    <td><%= post.dob %></td>
    <td><%= post.desire %></td>
    <td><%= post.intrest %></td>
    <td><%= post.hobby %></td>
    <td><%= post.signature %></td>
    <td><span class="label"><%= link_to 'Show', post %></span></td>
    <td><span class="label label-success"><%= link_to 'Edit', edit_post_path(post) %></span></td>
    <td><span class="label label-important"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
  </tr>
<% end %>
</table>

